{% extends '@startupapi/page.html.twig' %}
{% block title %}{{event_name}} on {{event_time|date('M j, Y')}} - Raffle - {{UserConfig.appName}}{% endblock %}
{% block content %}
<link rel="stylesheet" type="text/css" href="{{UserConfig.SITEROOTURL}}raffle/meetup.css">
<script src="{{UserConfig.SITEROOTURL}}raffle/raffle.js"></script>

<style>
	#random {
		margin-right: 1em;
	}

	.progress {
		margin: 0.3em 0;
	}

	#winner_section {
		display: none;
	}
</style>

<div class="container">
    <h1>{{group_name}}</h1>

    <h2><a target="_blank" href="{{event_url}}">{{event_name}}</a> on {{event_time|date('M j, Y')}}</h2>

    <div class="well" id="controls">
    	<button id="random" class="pull-left btn btn-primary btn-sm">Pick a Random Winner!</button>

        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0">
                <span class="sr-only">0% Complete</span>
            </div>
        </div>
    </div>
</div>
<div class="container" id="winner_section">
	<h2>Winners!</h2>
	<div class="well well-small">
		<div class="row rsvps" id="winners"></div>
	</div>
</div>

<div class="container">
    <h2>{{rsvps|length}} RSVPs</h2>
    <div class="row rsvps" id="all_rsvps">
        {% for rsvp in rsvps %}
        <div class="rsvp col-sm-6 col-md-4 col-lg-3">
            <div class="tag">
    			<div class="thumb">
    				<img src="{{rsvp.photo_url}}"/>
    			</div>
                <span class="name">{{rsvp.name}}</span>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
